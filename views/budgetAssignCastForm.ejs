<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/metaHead'); %>
</head>
<body>
  <%- include('./partials/header'); %>
  <h4>Total: <%= total %></h4>
  <form action="" method="post" class="ui form">
    <label>Category Name:</label>
    <select name="categoryId" class="ui dropdown">
    <% for(let category of categories) {%>
        <option value= "<%= category.id %>" ><%=category.name%></option> 
    <%} %>
    </select>
    <label>Amount :</label>
    <input type="text" name="amount" value="<%= budgetCategory.amount || '' %>" placeholder="Amount">
    <input class="ui primary button" type="submit" value="Save">
  </form>
</body>
</html>
