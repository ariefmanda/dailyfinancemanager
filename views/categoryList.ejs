<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/metaHead'); %>
</head>
<body>
  <%- include('./partials/header'); %>
  <table class="ui celled compact table">
    <thead>
      <th>Name Category</th>
      <th>Actions</th>
    </thead>
    <tbody>
        <% for(let category of categories) {%>
          <tr>
            <td><%= category.name %></td>
            <td>
                <a class "ui button mini" href="/category/<%= category.id %>/edit">Edit</a>
                <a href="/category/<%= category.id%>/delete">Delete</a>
            </td>
          </tr>  
        <% } %>
    </tbody>
  </table>
  <h3><a class="ui primary button" href="/category/add">Add Category</a></h3>
</body>
</html>